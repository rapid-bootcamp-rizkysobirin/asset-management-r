@model Asset_Management.ViewModel.AuditReq

@{
    ViewBag.Title = "Form Audit";
    // pengisi audit/peminjam
    Layout = "_Layout";
}

<h2>Form Audit</h2>

<form enctype="multipart/form-data" asp-controller="FormAudit" asp-action="Save" method="post">
    <div class="form-group">
        <label asp-for="AssetHistoryId">PIC Name</label>
        <select type="text" asp-for="AssetHistoryId" class="form-control" asp-items="@ViewBag.AssetHistory">
            <option selected>Select PIC</option>
        </select>
        <span asp-validation-for="AssetHistoryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Condition">Codition</label>
        <input asp-for="Condition" class="form-control" />
        <span asp-validation-for="Condition" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TypeWindows">Type Windows</label>
        <input asp-for="TypeWindows" class="form-control" />
        <span asp-validation-for="TypeWindows" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="WindowsLicense" class="control-label">Windows License</label>
        <div class="custom-file">
            <input asp-for="WindowsLicense" class="form-control" id="FLWin" 
            onchange="document.getElementById('WinPrv').src = window.URL.createObjectURL(this.files[0])"/>
        </div>
        <span asp-validation-for="WindowsLicense" class="text-danger"></span>
        <img id="WinPrv" src="" alt="Uploaded Image" width="150"
            style="border:1px; margin-top:20px; margin-left:120px;"/>
    </div>

    <div class="form-group">
        <label asp-for="TypeOffice">Type Office</label>
        <input asp-for="TypeOffice" class="form-control" />
        <span asp-validation-for="TypeOffice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="OfficeLicense" class="control-label">Office License</label>
        <div class="custom-file">
            <input asp-for="OfficeLicense" class="form-control" id="FLOff"
                   onchange="document.getElementById('OffPrv').src = window.URL.createObjectURL(this.files[0])" />
        </div>
        <span asp-validation-for="OfficeLicense" class="text-danger"></span>
        <img id="OffPrv" src="" alt="Uploaded Image" width="150"
             style="border:1px; margin-top:20px; margin-left:120px;" />
    </div>

    <div class="form-check">
        <input asp-for="Antivirus" class="form-check-input" type="checkbox" value="true">
        <label asp-for="Antivirus" class="form-check-label">
            Antivirus is installed
        </label>
    </div>

    <div class="form-group">
        <label asp-for="AssetPhoto" class="control-label">Asset Photo</label>
        <div class="custom-file">
            <input asp-for="AssetPhoto" class="form-control" id="FLOff"
                   onchange="document.getElementById('PhotoPrv').src = window.URL.createObjectURL(this.files[0])" />
        </div>
        <span asp-validation-for="AssetPhoto" class="text-danger"></span>
        <img id="PhotoPrv" src="" alt="Uploaded Image" width="150"
             style="border:1px; margin-top:20px; margin-left:120px;" />
    </div>

    <div class="pt-2 pb-2">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
