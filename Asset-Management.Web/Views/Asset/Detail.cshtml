@model Asset_Management.ViewModel.AssetModel

@{
    ViewBag.Title = "Asset - Detail";
    Layout = "_Layout";
}

<h2>Asset Detail</h2>
<table class="table tab-content">
    <tbody>
        <tr>
            <th>ID</th>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <th>Asset Name</th>
            <td>@Model.AssetName</td>
        </tr>
        <tr>
            <th>Serial Number</th>
            <td>@Model.SerialNumber</td>
        </tr>
        <tr>
            <th>Purchase Year</th>
            <td>@Model.PurchaseYear</td>
        </tr>
        <tr>
            <th>Specification</th>
            <td>@Model.Specification</td>
        </tr>
        <tr>
            <th>Used</th>
            <td>@Model.Used</td>
        </tr>
    </tbody>
</table>
<a asp-action="Index" class="btn btn-sm btn-success">Back</a>
